<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".LauncherActivity">

    <ImageView
        android:id="@+id/launcher_image"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:contentDescription="@string/launcher_image"
        android:src="@drawable/ic_connection_foreground"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:text="@string/aid_hub"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/launcher_image"
        app:layout_constraintTop_toTopOf="@+id/launcher_image"
        app:layout_constraintVertical_bias="0.15"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>